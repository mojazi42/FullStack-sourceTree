@model Employee

<div class="container mt-4">
    <h2 class="text-center mb-4">Add New Employee</h2>

    <div class="card shadow p-4">
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name" />
            </div>
            <div class="mb-3">
                <label asp-for="Position" class="form-label"></label>
                <input asp-for="Position" class="form-control" placeholder="Enter Position" />
            </div>
            <div class="mb-3">
                <label asp-for="Salary" class="form-label"></label>
                <input asp-for="Salary" class="form-control" placeholder="Enter Salary" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success">Save Employee</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
