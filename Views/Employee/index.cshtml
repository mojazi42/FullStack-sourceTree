@model IEnumerable<Employee>

    <div class="container mt-4">
        <h2 class="text-center mb-4">Employee List</h2>

        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Salary</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Position</td>
                    <td>@employee.Salary.ToString("C")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
